{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/PluginManifest",
  "definitions": {
    "PluginManifest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "icon": {
          "type": "object",
          "properties": {
            "family": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": [
            "family",
            "name"
          ],
          "additionalProperties": false
        },
        "version": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "filters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PluginFilter"
          }
        },
        "entrypoint": {
          "type": "object",
          "properties": {
            "file": {
              "type": "string"
            },
            "downloader": {
              "type": "string"
            }
          },
          "required": [
            "file",
            "downloader"
          ],
          "additionalProperties": false
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "icon",
        "version",
        "author",
        "source",
        "filters",
        "entrypoint",
        "requirements"
      ],
      "additionalProperties": false
    },
    "PluginFilter": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "toggle"
            },
            "key": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "default": {
              "type": "boolean"
            }
          },
          "required": [
            "type",
            "key",
            "name",
            "default"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "text"
            },
            "key": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "default": {
              "type": "object",
              "properties": {
                "comparator": {
                  "type": "string",
                  "enum": [
                    "not_equals",
                    "equals"
                  ]
                },
                "value": {
                  "type": "string"
                }
              },
              "required": [
                "comparator",
                "value"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "type",
            "key",
            "name",
            "default"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "number"
            },
            "key": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "default": {
              "type": "object",
              "properties": {
                "comparator": {
                  "$ref": "#/definitions/Comparator"
                },
                "value": {
                  "type": "number"
                }
              },
              "required": [
                "comparator",
                "value"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "type",
            "key",
            "name",
            "default"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "number"
            },
            "key": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "choices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": {},
                  "display": {
                    "type": "string"
                  }
                },
                "required": [
                  "key",
                  "display"
                ],
                "additionalProperties": false
              }
            },
            "default": {}
          },
          "required": [
            "type",
            "key",
            "name",
            "choices",
            "default"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Comparator": {
      "type": "string",
      "enum": [
        "not_equals",
        "equals",
        "greater_than",
        "less_than",
        "greater_than_equal",
        "less_than_equal"
      ]
    }
  }
}